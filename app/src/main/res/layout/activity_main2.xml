<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.dynamsoft.documentscanner.ui.ReadNFCActivity">

    <!-- Layout d'attente NFC avec instructions -->
    <LinearLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone">

        <!-- Icône NFC -->
        <ImageView
            android:id="@+id/image_nfc"
            android:layout_width="220dp"
            android:layout_height="360dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="UseAppTint" />

        <!-- Texte principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Recherche du NFC ..."
            android:layout_marginBottom="10dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Faites glisser doucement votre téléphone sur le document jusqu’au positionnement optimal."
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="16dp" />

        <!-- Bouton annuler -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClose"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:text="Annuler"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:backgroundTint="?attr/colorPrimary"
            app:cornerRadius="24dp"
            android:paddingVertical="8dp"/>
    </LinearLayout>

    <!-- Layout de chargement pendant le traitement NFC -->
    <LinearLayout
        android:id="@+id/loading_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/image_nfc2"
            android:src="@drawable/protection"
            android:layout_width="180dp"
            android:layout_height="320dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="UseAppTint" />

        <!-- Texte principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Restez immobile"
            android:textColor="?attr/colorOnSurface"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp" />

        <!-- Texte de progression -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="20dp"
            android:text="Lecture des données de la puce en cours...\nVeuillez patienter sans éloigner le document" />

        <!-- Progress bar linéaire -->
        <ProgressBar
            android:id="@+id/progressBarLinear"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/purple_app_bar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal" />
    </LinearLayout>

    <!-- Layout des résultats après lecture NFC -->
    <ScrollView
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin">

            <!-- Photo du document -->
            <ImageView
                android:id="@+id/view_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:src="@drawable/photo" />

            <!-- Résultat texte -->
            <TextView
                android:id="@+id/text_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
