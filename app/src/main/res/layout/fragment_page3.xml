<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Score de similarité -->
            <TextView
                android:id="@+id/tvSimilarityScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Score de similarité: Null"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/purple_app_bar"/>

            <!-- Section Portrait du document -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Portrait du document"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Section Selfie -->
            <ImageView
                android:id="@+id/portraitImageView"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:layout_marginBottom="22dp"
                android:adjustViewBounds="true"
                android:background="@color/light_gray"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selfie du client"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginBottom="16dp"
                android:background="@color/light_gray"/>

            <Button
                android:id="@+id/openCambtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prendre un selfie"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"/>


        </LinearLayout>
    </ScrollView>
</FrameLayout>