<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        tools:context=".CustomerDataActivity">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Document Data"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"/>

        <LinearLayout
            android:layout_width="356dp"
            android:layout_height="114dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="24dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                tools:srcCompat="@tools:sample/avatars" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="24dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvSimilarityScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score de similaritÃ©: N/A"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/openCambtn"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingTop="12dp"
            android:paddingEnd="24dp"
            android:paddingBottom="12dp"
            android:text="Identify Document"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            app:iconTint="@android:color/white" />

        <LinearLayout
            android:layout_width="369dp"
            android:layout_height="390dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvName"
                style="@style/DataFieldStyle"
                android:text="Name: " />

            <TextView
                android:id="@+id/tvSurname"
                style="@style/DataFieldStyle"
                android:text="Surname: " />

            <TextView
                android:id="@+id/tvDateOfBirth"
                style="@style/DataFieldStyle"
                android:text="Date of Birth: " />

            <TextView
                android:id="@+id/tvGender"
                style="@style/DataFieldStyle"
                android:text="Gender: " />

            <TextView
                android:id="@+id/tvNationality"
                style="@style/DataFieldStyle"
                android:text="Nationality: " />

            <TextView
                android:id="@+id/tvDocumentType"
                style="@style/DataFieldStyle"
                android:text="Document Type: " />

            <TextView
                android:id="@+id/tvDocumentNumber"
                style="@style/DataFieldStyle"
                android:text="Document Number: " />

            <TextView
                android:id="@+id/tvDateOfExpiry"
                style="@style/DataFieldStyle"
                android:text="Date of Expiry: " />

            <TextView
                android:id="@+id/tvIssuingAuthority"
                style="@style/DataFieldStyle"
                android:text="Issuing Authority: " />

            <TextView
                android:id="@+id/tvMrzRaw"
                style="@style/DataFieldStyle"
                android:text="MRZ: " />
        </LinearLayout>


    </LinearLayout>
</ScrollView>