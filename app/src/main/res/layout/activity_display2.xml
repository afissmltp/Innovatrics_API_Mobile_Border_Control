<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Inclusion de la toolbar externalisée -->
    <include
        android:id="@+id/simpleToolbar"
        layout="@layout/toolbar_custom"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/topButtonBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/simpleToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/rotateButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Faire pivoter"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/readDocBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lire"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <com.jsibbold.zoomage.ZoomageView
        android:id="@+id/documentImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/topButtonBar"
        app:layout_constraintBottom_toTopOf="@id/qualityPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:zoomage_zoomable="true"
        app:zoomage_translatable="true"
        app:zoomage_autoCenter="true"
        app:zoomage_animateOnReset="true"
        app:zoomage_maxScale="8"
        app:zoomage_minScale="0.6"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/qualityPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottomControlBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Résultats d'inspection :"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <ImageView
                    android:id="@+id/expirationIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/green" />
                <TextView
                    android:id="@+id/expirationStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expiration : VALIDE"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <ImageView
                    android:id="@+id/mrzIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    android:tint="@color/green"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/mrzStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MRZ : VALIDE"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <!-- Screenshot -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <ImageView
                    android:id="@+id/screenshotIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/green" />
                <TextView
                    android:id="@+id/screenshotStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Screenshot : NON"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <!-- Print copy -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <ImageView
                    android:id="@+id/printCopyIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/green" />
                <TextView
                    android:id="@+id/printCopyStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PrintCopy : NON"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <ImageView
                    android:id="@+id/textConsistencyIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/green" />
                <TextView
                    android:id="@+id/textConsistencyStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Texte : COHÉRENT"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/ocrConfidenceIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    android:tint="@color/green"
                    android:layout_marginEnd="8dp"
                    tools:ignore="UseAppTint" />
                <TextView
                    android:id="@+id/ocrConfidenceStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confiance OCR : 99.50%"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <include
        android:id="@+id/bottomControlBar"
        layout="@layout/bottom_control_bar"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/purple_app_bar"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>