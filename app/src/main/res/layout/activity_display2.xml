<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Inclusion de la toolbar externalisée -->
    <include
        android:id="@+id/simpleToolbar"
        layout="@layout/toolbar_custom"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/topButtonBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/simpleToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/rotateButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Faire pivoter"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/readDocBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Détails"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- ScrollView pour tout le contenu -->
    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topButtonBar"
        app:layout_constraintBottom_toTopOf="@id/bottomControlBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image zoomable -->
            <com.jsibbold.zoomage.ZoomageView
                android:id="@+id/documentImageView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="fitCenter"
                app:zoomage_zoomable="true"
                app:zoomage_translatable="true"
                app:zoomage_autoCenter="true"
                app:zoomage_animateOnReset="true"
                app:zoomage_maxScale="8"
                app:zoomage_minScale="0.6"/>
            <!-- Vérifications de cohérence -->
            <androidx.cardview.widget.CardView
                android:id="@+id/coherencePanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vérifications de cohérence ( MRZ-Portrait )"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="12dp"/>

                    <!-- Age -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:id="@+id/ageIcon"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:src="@drawable/ic_error_circle"
                            android:layout_marginEnd="8dp"
                            app:tint="@color/red"/>
                        <TextView
                            android:id="@+id/ageStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Âge:"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                    <!-- Genre -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/genderIcon"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:src="@drawable/ic_error_circle"
                            android:layout_marginEnd="8dp"
                            app:tint="@color/red"/>
                        <TextView
                            android:id="@+id/genderStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Genre :"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- Première carte : inspection qualité -->
            <androidx.cardview.widget.CardView
                android:id="@+id/qualityPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Inspection de document"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="12dp"/>

                    <!-- Expiration -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:id="@+id/expirationIcon"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:src="@drawable/ic_error_circle"
                            android:layout_marginEnd="8dp"
                            app:tint="@color/red" />
                        <TextView
                            android:id="@+id/expirationStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expiration :"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                    <!-- MRZ -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:id="@+id/mrzIcon"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:src="@drawable/ic_error_circle"
                            android:tint="@color/red"
                            android:layout_marginEnd="8dp"/>
                        <TextView
                            android:id="@+id/mrzStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MRZ :"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                    <!-- Screenshot -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:id="@+id/screenshotIcon"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:src="@drawable/ic_error_circle"
                            android:layout_marginEnd="8dp"
                            app:tint="@color/red" />
                        <TextView
                            android:id="@+id/screenshotStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Capture d'écran :"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                    <!-- Print copy -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:id="@+id/printCopyIcon"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:src="@drawable/ic_error_circle"
                            android:layout_marginEnd="8dp"
                            app:tint="@color/red" />
                        <TextView
                            android:id="@+id/printCopyStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Copie imprimée :"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                    <!-- Text Consistency -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:id="@+id/textConsistencyIcon"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:src="@drawable/ic_error_circle"
                            android:layout_marginEnd="8dp"
                            app:tint="@color/red" />
                        <TextView
                            android:id="@+id/textConsistencyStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cohérence du texte :"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                    <!-- OCR Confidence -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/ocrConfidenceIcon"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:src="@drawable/ic_error_circle"
                            android:tint="@color/red"
                            android:layout_marginEnd="8dp"
                            tools:ignore="UseAppTint" />
                        <TextView
                            android:id="@+id/ocrConfidenceStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confiance OCR :"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Barre de contrôle -->
    <include
        android:id="@+id/bottomControlBar"
        layout="@layout/bottom_control_bar"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/purple_app_bar"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
