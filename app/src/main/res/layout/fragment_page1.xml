<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">



        <!-- Type de document -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type:"
                android:textColor="#666"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvDocumentTypeFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="Passeport"/>
        </LinearLayout>

        <!-- Numéro de document -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numéro:"
                android:textColor="#666"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvDocumentNumberFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="AB1234567"/>
        </LinearLayout>

        <!-- Date de naissance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Naissance:"
                android:textColor="#666"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvDobFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="15/04/1985"/>
        </LinearLayout>

        <!-- Nationalité -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nationalité:"
                android:textColor="#666"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvNationalityFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="Française"/>
        </LinearLayout>

        <!-- Date d'expiration -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiration:"
                android:textColor="#666"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvDateOfExpiryFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="15/04/2030"/>
        </LinearLayout>

        <!-- Autorité émettrice -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Émis par:"
                android:textColor="#666"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvIssuingAuthorityFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="Préfecture de Paris"/>
        </LinearLayout>

        <!-- ImageView centrée -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Texte au-dessus de l'image -->
            <TextView
                android:id="@+id/documentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo du document"
                android:textSize="16sp"
                android:textColor="#666"
                android:layout_marginBottom="8dp"/>

            <!-- Image Zoomable -->
            <com.jsibbold.zoomage.ZoomageView
                android:id="@+id/documentImageViewFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                tools:srcCompat="@tools:sample/backgrounds/scenic"
                app:zoomage_zoomable="true"
                app:zoomage_translatable="true"
                app:zoomage_autoCenter="true"
                app:zoomage_animateOnReset="true"
                app:zoomage_maxScale="8"
                app:zoomage_minScale="0.6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Texte au-dessus de l'image -->
            <TextView
                android:id="@+id/modelDocTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modèle du document"
                android:textSize="16sp"
                android:textColor="#666"
                android:layout_marginBottom="8dp"/>

            <!-- Image Zoomable -->
            <com.jsibbold.zoomage.ZoomageView
                android:id="@+id/modelDocImgView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                tools:srcCompat="@tools:sample/backgrounds/scenic"
                app:zoomage_zoomable="true"
                app:zoomage_translatable="true"
                app:zoomage_autoCenter="true"
                app:zoomage_animateOnReset="true"
                app:zoomage_maxScale="8"
                app:zoomage_minScale="0.6"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>